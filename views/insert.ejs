<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./templates/header') %>
  </head>
  <body>
    <div class="container">
      <div class="card">
        <div class="card-header"><%- include('./templates/navbar') %></div>
        <div class="card-body">

          <div class="row mt-3">
            <h3>Insertar Mascota</h3>
          </div>

          <form id="form-dates" method="post">

            <div class="row m-3">
              <label for="id" class="col-sm-2 col-form-label">ID</label>
              <div class="col-sm-8">
                <input
                  type="text"
                  name="id"
                  class="form-control"
                  id="id"
                  pattern="[0-9]+"
                  required
                />
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-sm-6">
                <label for="name" class="form-label">Nombre</label>
                <input
                    type="text"
                    name="name"
                    id="name"
                    class="form-control"
                    pattern="[a-zA-z\s]+"
                    required
                />
              </div>
              <div class="col-sm-6">
                <label for="spec" class="form-label">Especie</label>
                <select id="spec" class="form-select" name="spec" required>
                  <option value="">Seleccione Especie</option>
                  <%species.forEach(specie => { %>
                  <option value="<%=specie.name%>"><%= specie.name%></option>
                  <%})%>
                </select>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-sm-6">
                <label for="age" class="form-label">Edad</label>
                <input
                  type="tel"
                  id="age"
                  name="age"
                  class="form-control"
                  pattern="[0-9]+"
                  required
                />
              </div>
              <div class="col-sm-6">
                <label for="phone" class="form-label">Teléfono de dueño</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="form-control"
                  pattern="[0-9]+"
                  required
                />
              </div>
            </div>

            <fieldset class="row mt-3">
              <legend class="col-form-label col-sm-2 pt-0">Género</legend>
              <div class="col-sm-10">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="gender"
                    value="H"
                    checked
                  />
                  <label class="form-check-label" for="gender">
                    Hembra
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="gender"
                    value="M"
                  />
                  <label class="form-check-label" for="gender">
                    Macho
                  </label>
                </div>
              </div>
            </fieldset>

            <div class="row mt-3">
              <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-outline-success btn-lg">
                  Registrar
                </button>
              </div>
            </div>
            
          </form>
        </div>
     </div>
    <script>
      var  dataSpecies = '<%-JSON.stringify(species) %>'
      var message='<%-mensaje %>'
     
      if(message==="false"){
        alert("ERROR - Ese identificador ya está registrado")
        window.location.href="http://localhost:8080/insert"
      }
    </script>
    <%- include('./templates/footer') %>
  </body>
</html>
