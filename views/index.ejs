<!doctype html>
<html lang='es'>
    <head>
        <%- include('./templates/header')%>
    </head>
    <body>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <%- include('./templates/navbar')%>
                </div>
                <div class="card-body">
                    <%if(pets.size){%>
                        <table class="table bm-2">
                            <thead>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Especie</th>
                                <th>Edad</th>
                                <th>Contacto</th>
                                <th>GÃ©nero</th>
                            </thead>
                            <tbody>
                                <% pets.forEach((pet,k) => { %>
                                    <tr>
                                        <td><%= k %></td>
                                        <td><%= pet.name %></td>
                                        <td><%= pet.spec %></td>
                                        <td><%= pet.age %></td>
                                        <td><%= pet.phone %></td>
                                        <td><%= pet.gender %></td>
                                    </tr>
                                <%})%>
                            </tbody>
                        </table>
                    <%}else{%>
                        <h5>No hay Registros</h5>
                    <%}%>
                    <a class="btn btn-primary" href="/insert" role="button">Nuevo Registro</a>
                </div>
            </div>
        </div>
        <%- include('./templates/footer')%>
    </body>
</html>
